<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_top_student_attendance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/bg_title" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_device"
            android:textColor="@color/safe_white"
            android:textSize="@dimen/text_size_title_homepage" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_device_hint"
        android:textSize="@dimen/safe_com_text_size_normal" 
        android:textColor="@color/safe_black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        />
    
    <Button 
        android:onClick="quickAddDevice"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="40dp"
        android:text="@string/add_device_quickly"
        android:background="@drawable/selector_btn_login"
        android:textColor="@color/safe_white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    
    <TextView 
        android:onClick="changeCount"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chenge_count"
        android:textColor="#777777"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        />
        
</LinearLayout><!-- From: file:/W:/Android/SvnParent/safeCardApp/src/main/res/layout/activity_add_device2.xml -->