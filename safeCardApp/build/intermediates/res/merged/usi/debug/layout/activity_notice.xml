<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/login_gray"
    >

    <RelativeLayout
        android:id="@+id/rl_top_student_attendance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/bg_title" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/default_btn_bg"
            android:onClick="back"
            android:src="@drawable/ic_back" >
        </ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/alarm_mode"
            android:textColor="@color/safe_white"
            android:textSize="@dimen/text_size_title_homepage" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_power_saving_mode"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/selector_mefragment"
        android:clickable="true"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="通知提醒"
            android:textSize="18sp" />


        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/iv_power_saving_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/button_on" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/safe_transparent" />

</LinearLayout><!-- From: file:/W:/Android/SvnParent/safeCardApp/src/main/res/layout/activity_notice.xml -->