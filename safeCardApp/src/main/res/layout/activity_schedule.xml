<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/login_gray"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/bg_title" >

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/default_btn_bg"
            android:onClick="finishMyself"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_height"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="课程表"
            android:textColor="@color/safe_white"
            android:textSize="@dimen/text_size_title_homepage" />

        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
            android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/solitude"
        >
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"   
            android:background="@drawable/stroke_gray"         
            />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="周一"
            android:background="@drawable/stroke_gray"
            />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="周二"
            android:background="@drawable/stroke_gray"
            />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="周三"
            android:background="@drawable/stroke_gray"
            />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="周四"
            android:background="@drawable/stroke_gray"
            />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="周五"
            android:background="@drawable/stroke_gray"
            />
        
        
    </LinearLayout>

    <ListView
        android:id="@+id/lv_schedule"
        android:divider="@color/safe_transparent"
        android:dividerHeight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >
    </ListView>

</LinearLayout>